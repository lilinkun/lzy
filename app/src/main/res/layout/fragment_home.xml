<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        
        <variable
            name="home"
            type="com.lzyyd.hsq.viewmodel.HomeFragmentViewModel" />

        <variable
            name="homebean"
            type="com.lzyyd.hsq.bean.HomeBean" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_bg"
        >

    <com.lzyyd.hsq.ui.TranslucentScrollView
        android:id="@+id/tsv_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        </LinearLayout>


        <com.xw.banner.Banner
            android:id="@+id/bannerView"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:indicator_drawable_selected="@drawable/ic_home_circle_banner_click"
            app:indicator_drawable_unselected="@drawable/ic_home_circle_banner_unclick"
            app:indicator_height="10dp"
            app:indicator_margin="5dp"
            app:indicator_width="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
            <View
                android:layout_width="match_parent"
                android:layout_height="507dp"
                android:background="@drawable/ic_home_bg"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_home_title_gridview"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
        
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E6E6E6"
                    />
        
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="@dimen/margin_10"
                     android:layout_marginTop="@dimen/margin_10"
                     >
        
        
                     <TextView
                         android:id="@+id/tv_iconfont"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:typeface="@{home.setTypeFace()}"
                         android:layout_marginTop="@dimen/margin_4"
                         android:textSize="12sp"
                         android:text="@string/iconfont" />
        
                     <!--<TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10dp"
                         android:text="头条"
                         android:textSize="10sp"
                         android:textColor="#DE3C31"
                         android:background="@drawable/ic_home_toutiao"
                         />
        
        
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="2020年最in家居流行色彩"
                         android:textColor="#ff8b8b8b"
                         android:layout_marginLeft="10dp"
                         android:textSize="12sp"
                         />-->
                     
                     <com.lzyyd.hsq.ui.AdverView
                         android:id="@+id/av_title"
                         android:layout_width="wrap_content"
                         android:layout_height="20dp"
                         />
        
        
                 </LinearLayout>
        
        
                </LinearLayout>
        
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="10dp"
                    app:image="@{homebean.sq.img}"
                    />



                 <!--<ImageView
                     android:id="@+id/iv_home_haosheng"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@mipmap/ic_haosheng"/>
        
        
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_home_haosheng"
                        android:orientation="vertical">
        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="壕省"
                            android:textColor="#ffde3c31"
                            android:textSize="15sp"
                            android:layout_marginTop="1.5dp"
                            android:layout_marginLeft="1.5dp"
                            />
        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="精打细算 为你省钱"
                            android:textColor="#ffde3c31"
                            android:textSize="10sp"
                            android:layout_marginTop="2dp"
                            />
        
                    </LinearLayout>-->
        
        
                </RelativeLayout>
        
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_home_vip"
                    android:scaleType="fitXY"
                    app:image="@{homebean.vip.img}"
                    android:onClick="@{()->home.setImageClick()}"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_home_title_gridview"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:background="@drawable/bg_home_boutique"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="精选好货"
                            android:textColor="#ffffffff"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="right|center_vertical"
                            >

                            <com.lzyyd.hsq.ui.CustomRoundAngleImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/ic_home_boutique"
                                android:scaleType="fitXY"
                                app:right_top_radius="10dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="必买清单 · 口碑品质"
                                android:layout_marginRight="10dp"
                                android:textColor="#ffffffff"
                                android:textSize="12sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="新品速递"
                                android:textColor="#ffde3c32"
                                android:textSize="12sp"
                                android:layout_margin="@dimen/margin_10"
                                />

                            <ImageView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:scaleType="centerInside"
                                app:image="@{homebean.goodsList1.get(0).goodsImg}"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="镇店之宝"
                                android:textColor="#ffde3c32"
                                android:textSize="12sp"
                                android:layout_margin="@dimen/margin_10"
                                />

                            <ImageView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:scaleType="centerInside"
                                app:image="@{homebean.goodsList2.get(0).goodsImg}"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="口碑热销"
                                android:textColor="#ffde3c32"
                                android:textSize="12sp"
                                android:layout_margin="@dimen/margin_10"
                                />

                            <ImageView
                                android:layout_width="105dp"
                                android:layout_height="105dp"
                                android:scaleType="centerInside"
                                app:image="@{homebean.goodsList3.get(0).goodsImg}"
                                />


                        </LinearLayout>




                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_10"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="力荐"
                            android:textColor="#ff333333"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="超值精选"
                            android:textColor="#ff666666"
                            android:textSize="10sp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="排行榜"
                            android:textColor="#ff333333"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="跟榜选好物"
                            android:textColor="#ff666666"
                            android:textSize="10sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实惠"
                            android:textColor="#ff333333"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="便宜好货"
                            android:textColor="#ff666666"
                            android:textSize="10sp"
                        />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"
                            android:textColor="@drawable/bg_home_text"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="好货优选"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_goods_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>



    </RelativeLayout>

    </com.lzyyd.hsq.ui.TranslucentScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/RED_E00000"
            android:paddingTop="30dp"
            >


            <ImageView
                android:id="@+id/lin_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:src="@mipmap/ic_logo_hsq"
                />

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/shape_search_edittext"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_search_bg"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:id="@+id/text_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:hint="中秋礼盒"
                    android:textColor="@color/black"
                    android:textColorHint="#CCCCCC"
                    android:textSize="15sp" />
            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textColor="@color/white"
                    android:text="@string/ic_home_calendar"
                    android:typeface="@{home.setTypeFace()}"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="@string/ic_home_message"
                    android:textColor="@color/white"
                    android:typeface="@{home.setTypeFace()}"
                    android:layout_marginRight="10dp"
                    />


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>
</layout>