        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:textColor="#333333"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
